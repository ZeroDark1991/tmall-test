borderColor = #dedede

#app
  width 800px
  margin 0 auto
.table
  &__body
    position relative
    & .loading-mask
      background-color rgba(256,256,256, 0.8)
      position absolute
      width 100%
      height 100%
      z-index 199
      display none
      align-items center
      justify-content center
  &__head
    background-color #f4f4f4
  &__row
    display flex
    justify-content center
    align-items center
  &__column
    flex-basis 200px
    flex-grow 1
    border 1px solid borderColor
    text-align center
    padding 12px
    & input
      border none
      padding 0
      margin 0
      text-align center
    &.action
      display flex
      justify-content center
      user-select none
      & .button
        padding 0 10px
        color #0077dd
        cursor pointer
        &:hover
          color #3399dd

